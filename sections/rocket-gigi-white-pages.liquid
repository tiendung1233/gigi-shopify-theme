{{ '_rocket-gigi-white-pages.scss' | asset_url | stylesheet_tag }}
{%- style -%}
    .section-{{ section.id }}-padding {
        padding-bottom: {{ section.settings.padding_bottom }}px;
        padding-top: {{ section.settings.padding_top }}px;
    }
    @media ( min-width: 1024px ) {
      
    } 

{%- endstyle -%}
<div class="section-{{ section.id }} section-{{ section.id }}-padding gigi-white-page__container">
    <div class="gigi-white-page__wrapper">
        <div class="gigi-white-page__heading rocket-font-fgrotesk">
            {% if section.settings.heading != blank %}
                <span>{{ section.settings.heading }}</span>
            {% endif %}
        </div>
        <div class="gigi-white-page__content">
            {% for block in section.blocks %}
                {% case block.type %}
                    {%- when 'content' -%}
                        <div class="gigi-white-page__content__wrapper">
                            {% if block.settings.title != blank %}
                                <div class="gigi-white-page__content__title rocket-font-fgrotesk">
                                    <span>{{ block.settings.title }}</span>
                                </div>
                            {% endif %}
                            {% if block.settings.description != blank %}
                                <div class="gigi-white-page__content__description rocket-font-fgrotesk">
                                    <span>{{ block.settings.description }}</span>
                                </div>
                            {% endif %}
                        </div>
                {% endcase %}
            {% endfor %}
        </div>
    </div>
</div>
{% schema %}
{
  "name": "t:sections.white-pages.name",
  "tag": "section",
  "class": "section rocket-gigis-white-page",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
        "type": "inline_richtext",
        "id": "heading",
        "default": "Talk about your brand",
        "label": "t:sections.white-pages.settings.heading.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
        {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 40
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 52
        }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "t:sections.white-pages.blocks.name",
      "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Talk about your brand",
            "label": "t:sections.white-pages.blocks.settings.title.label"
        },
        {
            "type": "richtext",
            "id": "description",
            "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>",
            "label": "t:sections.white-pages.blocks.settings.description.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.white-pages.name",
      "blocks": [
        {
          "type": "content"
        },
        {
          "type": "content"
        },
        {
          "type": "content"
        },
        {
          "type": "content"
        }
      ]
    }
  ]
}
{% endschema %}