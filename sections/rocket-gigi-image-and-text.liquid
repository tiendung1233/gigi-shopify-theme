{% assign content_alignment = section.settings.content_alignment %}
{% assign content_position_horizontal = section.settings.content_position_horizontal %}
{% assign content_position_vertical = section.settings.content_position_vertical %}
{% assign image_position = section.settings.image_position %}
{% assign image_position_mb = section.settings.image_position_mb %}
{%- style -%}
    .section-{{ section.id }} .gigi-image-w-text_content-container .gigi-image-w-text__content-title {
        font-size: {{ section.settings.font_size_title_mb }}px;
        font-weight: {{ section.settings.font_weight_title }};
        color: {{ section.settings.color_text }};
    }
    .section-{{ section.id }} .gigi-image-w-text__title-wrapper {
        margin-top : {{ section.settings.margin_top_title_mb }}px;
    }
    .section-{{ section.id }} .gigi-image-w-text_content-container .gigi-image-w-text__content-content {
        font-size: {{ section.settings.font_size_content_mb }}px;
        line-height: 1.4;
        font-weight: {{ section.settings.font_weight_content }};
        color: {{ section.settings.color_text }};
    }
    .section-{{ section.id }} .gigi-image-w-text_content-container .gigi-button {
        color: {{ section.settings.color_text_button }};
        background-color: {{ section.settings.color_bg_btn }};
        font-size: {{ section.settings.font_size_button_mb }}px;
        line-height: 1.2;
    }
    .section-{{ section.id }} .gigi-image-w-text_content-container .gigi-button:hover {
        background-color: {{ section.settings.color_bg_btn_hover }};
        color: {{ section.settings.color_text_button_hover }};
    }
    .section-{{ section.id }} .gigi-image-w-text__button-wrapper {
        gap: {{ section.settings.gap_btn_mb }}px;
        margin-top: {{ section.settings.margin_top_button_mb }}px;
    }
    .section-{{ section.id }} .gigi-image-w-text_content-container {
        padding-top: {{ section.settings.padding_top_mb}}px;
        padding-bottom: {{ section.settings.padding_bottom_mb}}px;
        padding-right: {{ section.settings.padding_right_mb}}px;
        padding-left: {{ section.settings.padding_left_mb}}px;
    }
    .section-{{ section.id }} .gigi-image-w-text_content-container .gigi-image-w-text_content-wrapper {
        padding-top: {{ section.settings.padding_top_mb_content }}px;
        padding-bottom: {{ section.settings.padding_bottom_mb_content}}px;
        padding-right: {{ section.settings.padding_right_mb_content}}px;
        padding-left: {{ section.settings.padding_left_mb_content}}px;
        background-color: {{ section.settings.color_bg }};
    }
    .section-{{ section.id }} .gigi-content-button__wrapper .rocket-button-gigi__type-link_l::after {
        background-color: {{ section.settings.color_text_button }};
        bottom: 1px;
    }
    .section-{{ section.id }} .content-dsk {
        display: none;
    }
    .section-{{ section.id }} .content-mb {
        display: block;
    }
    @media ( min-width: 1024px ) {
        .section-{{ section.id }} .gigi-image-w-text_content-container .gigi-image-w-text__content-title {
            font-size: {{ section.settings.font_size_title }}px;   
        }
        .section-{{ section.id }} .content-dsk {
            display: block;
        }
        .section-{{ section.id }} .content-mb {
            display: none;
        }
        .section-{{ section.id }} .gigi-media_container {
            width: {{ section.settings.m_width_media }}%;
        }
        .section-{{ section.id }}.gigi-image-w-text__container .gigi-hero-image-w-text__inner .gigi-hero-image-w-text__wrapper .gigi-image-w-text_content-container {
            width: calc(100% - {{ section.settings.m_width_media }}%);
        }
        .section-{{ section.id }} .gigi-image-w-text__title-wrapper {
            margin-top : {{ section.settings.margin_top_title }}px;
        }
        .section-{{ section.id }} .gigi-image-w-text_content-container .gigi-image-w-text__content-content {
            font-size: {{ section.settings.font_size_content }}px; 
            line-height: 1.25;
        }
        .section-{{ section.id }} .gigi-image-w-text_content-container .gigi-button {
            font-size: {{ section.settings.font_size_button }}px;
            line-height: 1.25;
        }
        .section-{{ section.id }} .gigi-image-w-text__button-wrapper {
            gap: {{ section.settings.gap_btn }}px;
            margin-top: {{ section.settings.margin_top_button }}px;
        }
        .section-{{ section.id }} .gigi-image-w-text_content-container {
            padding-top: {{ section.settings.padding_top}}px;
            padding-bottom: {{ section.settings.padding_bottom}}px;
            padding-right: {{ section.settings.padding_right}}px;
            padding-left: {{ section.settings.padding_left}}px;
        }
        .section-{{ section.id }} .gigi-image-w-text_content-container .gigi-image-w-text_content-wrapper {
            padding-top: {{ section.settings.padding_top_content }}px;
            padding-bottom: {{ section.settings.padding_bottom_content}}px;
            padding-right: {{ section.settings.padding_right_content}}px;
            padding-left: {{ section.settings.padding_left_content}}px;
        }
    } 

