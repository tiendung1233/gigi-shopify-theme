<div class="section-{{ section.id }} section-{{ section.id }}-padding gigi-image-w-text__container">
        <div class="gigi-hero-image-w-text__inner">       
            <div class="gigi-hero-image-w-text__wrapper gigi-image-{{ image_position }}-desktop gigi-image-{{ image_position_mb }}-mb ">
                {% for block in section.blocks %}
                    {% case block.type %}
                        {%- when 'media' -%}
                            {%- style -%}
                            .section-{{ section.id }} .gigi-media_container {
                                padding-top: {{ block.settings.padding_top_mb}}px;
                                padding-bottom: {{ block.settings.padding_bottom_mb}}px;
                                padding-right: {{ block.settings.padding_right_mb}}px;
                                padding-left: {{ block.settings.padding_left_mb}}px;
                            }
                            @media ( min-width: 1024px ) {
                                .section-{{ section.id }} .gigi-media_container {
                                    padding-top: {{ block.settings.padding_top }}px;
                                    padding-bottom: {{ block.settings.padding_bottom }}px;
                                    padding-right: {{ block.settings.padding_right }}px;
                                    padding-left: {{ block.settings.padding_left }}px;
                                }
                            }
                            {%- endstyle -%}
                            {% liquid 
                                assign image_height_des = block.settings.image_banner_des.width | divided_by: block.settings.image_banner_des.aspect_ratio 
                                assign image_height_mb = block.settings.image_banner_mb.width | divided_by: block.settings.image_banner_mb.aspect_ratio 
                                assign width_media = block.settings.width_media 
                            %}
                            <div class="gigi-media_container">
                   
                                {% if block.settings.type_media == 'image' %}
                                    <div class="gigi-img_container gigi-img-{{ width_media }}">   
                                        {% if block.settings.image_banner_des != blank %}
                                            {{ block.settings.image_banner_des 
                                                | image_url: width: 1440, height: image_height_des
                                                | image_tag: preload: true, alt: 'gigi-image-w-text', class: 'image-typical image-typical_des image-full'
                                            }}
                                        {% endif %}
                                        {% if block.settings.image_banner_mb != blank %}
                                            {{ block.settings.image_banner_mb 
                                                | image_url: width: 375, height: image_height_mb
                                                | image_tag: preload: true, alt: 'gigi-image-w-text', class: 'image-typical image-typical_mb image-full'
                                            }}
                                        {% endif %}
                                    </div>
                                {% else %}
                                    <div class="gigi-video_container">   
                                        {% if block.settings.video_des != blank %}
                                            {{
                                                block.settings.video_des
                                                | video_tag: image_size: '1100x', loop: true, muted: true, autoplay: true, class: 'video_des video_typical image-full'
                                            }}
                                        {% endif %}
                                        {% if block.settings.video_mb != blank %}
                                            {{
                                                block.settings.video_mb
                                                | video_tag: image_size: '1100x', loop: true, muted: true, autoplay: true, class: 'video_mb video_typical image-full'
                                            }}
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </div>
                        {% endcase %}
                    {% endfor %}
                
                <div class="gigi-image-w-text_content-container gigi-image-w-text_content-{{ content_alignment }}">
                    <div class="gigi-image-w-text_content-wrapper 
                        {% case content_position_vertical  %}{% when 'top' %}gigi-content-vtop{% when 'center' %}gigi-content-vcenter {% when 'space-between' %}gigi-content-space-between {% else %}gigi-content-vbottom{% endcase %}
                        {% case content_position_horizontal %}{% when 'left' %}gigi-content-hleft{% when 'center' %}gigi-content-hcenter{% else %}gigi-content-hright{% endcase %}">
                        <div class="gigi-content__wrapper-width {% case content_position_vertical  %}{% when 'space-between' %}gigi-content-space-between-inner{% endcase %}">
                            <div class="gigi-image-w-text__title-wrapper">
                                {% if section.settings.title != blank %}
                                    <div class="gigi-image-w-text__content-title content-dsk rocket-font-fgrotesk">
                                        <span>{{ section.settings.title }}</span>
                                    </div>
                                {% endif %}
                                {% if section.settings.title_mb != blank %}
                                    <div class="gigi-image-w-text__content-title content-mb rocket-font-fgrotesk">
                                        <span>{{ section.settings.title_mb }}</span>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="gigi-content-button__wrapper">
                                <div class="gigi-image-w-text__content-wrapper">
                                    {% if section.settings.content != blank %}
                                        <div class="gigi-image-w-text__content-content content-dsk rocket-font-fgrotesk">
                                            <span>{{ section.settings.content }}</span>
                                        </div>
                                    {% endif %}
                                    {% if section.settings.content_mb != blank %}
                                        <div class="gigi-image-w-text__content-content content-mb rocket-font-fgrotesk">
                                            <span>{{ section.settings.content_mb }}</span>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="gigi-image-w-text__button-wrapper">
                                    {% if section.settings.rocket_button_label_1 != blank %}
                                        {% render 'rocket-gigi-buttons',
                                            type: section.settings.rocket_button_type, 
                                            url: section.settings.rocket_button_url_1,
                                            label: section.settings.rocket_button_label_1,
                                            color: section.settings.color_text_button,
                                            class: 'gigi-btn-image-w-text'
                                        %}
                                    {% endif %}
                                    {% if section.settings.rocket_button_label_2 != blank %}
                                        {% render 'rocket-gigi-buttons',
                                            class: 'rocket-gigi-img-w-text__info__button-2',
                                            type: section.settings.rocket_button_type, 
                                            url: section.settings.rocket_button_url_2,
                                            label: section.settings.rocket_button_label_2,
                                            color: section.settings.color_text_button,
                                        %}
                                    {% endif %}
                                    {% if section.settings.rocket_button_label_3 != blank %}
                                        {% render 'rocket-gigi-buttons',
                                            class: 'rocket-gigi-hero-banner__info__button-3',
                                            type: section.settings.rocket_button_type, 
                                            url: section.settings.rocket_button_url_3,
                                            label: section.settings.rocket_button_label_3,
                                            color: section.settings.color_text_button,
                                        %}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div> 
</div>


